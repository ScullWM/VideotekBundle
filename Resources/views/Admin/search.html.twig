{% extends "SwmVideotekBundle:Admin:layout.html.twig" %}
{% block content %}
<div class="row">
    <div class="col-md-12">
    <form action="" method="post">
        <input type="text" name="keyword">

        <select name="hostservice" id="">
            <option value="y">Youtube</option>
            <option value="d">Dailymotion</option>
            <option value="v">Vimeo</option>
        </select>

        <input type="submit">
    </form>
    </div>
</div>

<div class="row">
    <div class="span-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">Scrapp this videos:</div>
            <ul class="list-group">
                {% for item in result %}
                <li class="list-group-item">
                    <div style="height:200px">
                    {{item.title}} <br />
                    {{item.description}}
                    <a href="{{path('video_admin_doscrapp', {'service':item.service,'videoid':item.videoid})}}" class="btn btn-default">Scrapp</a>

                    <p><img class="pull-left" src="{{item.img}}" /></p>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>    
    </div>
</div>
{% endblock %}