{% extends "SwmVideotekBundle:Admin:layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <form action="{{ path('video_admin_tag')}}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-success" />
        </form>
    </div>
    <div class="col-md-9">
        {% for t in tags %}
            <span class="label label-info"><a href="{{path('video_admin_search', {hostservice:'y',keyword:t.tag})}}">{{ t.tag }}</a></span>
        {% endfor %}
    </div>
</div>

<form action="" method="post">
<div class="row">
    <div class="col-md-12">
        <h4>Add tag from text:</h4>
        <textarea name="txtform" style="width:100%;height:400px;"></textarea>
        <input type="submit">
    </div>
</div>
</form>
{% endblock %}