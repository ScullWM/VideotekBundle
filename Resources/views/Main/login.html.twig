{% extends "SwmVideotekBundle:Main:layout.html.twig" %}
{% block body %}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
<div class="container" style="margin-top:30px">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Login</strong></h3>
            </div>
            <div class="panel-body">
                <form role="form" action="{{ path('video_check') }}" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Username or Email</label>
                        <input type="text" class="form-control" style="border-radius:0px" id="exampleInputEmail1" name="_username"  value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" style="border-radius:0px" id="_password" name="_password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-sm btn-default">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}